# Modo de control de volumen
mode "volume" {
    bindsym k exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +5%
    bindsym j exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -5%

    bindsym --release AnyKey mode "default"
    bindsym $mod+F3 mode "default"
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

mode "brightness" {
    bindsym k exec --no-startup-id brightnessctl set +10%
    bindsym j exec --no-startup-id brightnessctl set 10%-

    bindsym --release AnyKey mode "default"
    bindsym $mod+F1 mode "default"
    bindsym Return mode "default"
    bindsym Escape mode "default"
}


mode "night light" {
    bindsym 1 exec --no-startup-id redshift -P -O 7000  # Muy frío (temperatura alta)
    bindsym 2 exec --no-startup-id redshift -P -O 6500  # Frío
    bindsym 3 exec --no-startup-id redshift -P -O 6000  # Moderadamente frío
    bindsym 4 exec --no-startup-id redshift -P -O 5500  # Neutro
    bindsym 5 exec --no-startup-id redshift -P -O 5000  # Neutro cálido
    bindsym 6 exec --no-startup-id redshift -P -O 4000  # Moderadamente cálido
    bindsym 7 exec --no-startup-id redshift -P -O 3000  # Cálido
    bindsym 8 exec --no-startup-id redshift -P -O 2000  # Muy cálido
    bindsym 9 exec --no-startup-id redshift -P -O 1000  # Muy cálido (temperatura baja)

    bindsym --release AnyKey mode "default"
    bindsym $mod+F2 mode "default"
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

